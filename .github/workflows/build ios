name: Build ios and Upload Artifact

on:
  push:
    branches:
      - Meta

jobs:
  build:
    name: Build for iOS
    runs-on: macos-latest
    steps:
    - name: Checkout code
      uses: actions/checkout@v3
      
    - name: Set up Go
      uses: actions/setup-go@v4
      with:
        go-version: '1.20.4'
      
    - name: Download dependencies
      run: go mod download
      
    - name: Build library for iOS
      run: |
        go install golang.org/x/mobile/cmd/gomobile@latest
        gomobile init
        gomobile bind -target=ios -o clashmeta ./src
      
    - name: Upload artifact
      uses: actions/upload-artifact@v3
      with:
        name: clashmeta-ios-arm64
        path: clashmeta
